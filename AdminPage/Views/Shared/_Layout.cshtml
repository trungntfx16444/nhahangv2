        function U2A(str) {
            var reserved = str.normalize("NFD").replace(/[\u0300-\u036f]/g, "").toLowerCase();
            reserved = reserved.replace(/đ/g, 'd').replace(/[ ]+/g, '-');
            reserved = reserved.replace(/[^0-9a-z-]/gi, '').replace(/-+/g, '-');
            return reserved;
        }

        //dinh dang tien vnd
        function toMoney(str) {
            try {
                let _char = str.toString().search("-") != -1 ? "-" : "";

                let _number = $.isNumeric(str) ? str.toString().replace(/[^0-9]/g, '') : str.replace(/[^0-9]/g, '');
                if (_number != "") {
                    let vnd = Number(_number).toLocaleString("vi-VN", { style: "currency", currency: "VND" });
                    return `${_char}${vnd.substring(0, vnd.length - 2)}`;
                }
                return _number;
            } catch {
                return "0";
            }
        }
