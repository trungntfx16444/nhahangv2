    <style type="text/css">
        .cs-page-loading {
            position: fixed;
            top: 0;
            right: 0;
            bottom: 0;
            left: 0;
            width: 100%;
            height: 100%;
            -webkit-transition: all .4s .2s ease-in-out;
            transition: all .4s .2s ease-in-out;
            background-color: #fff;
            opacity: 0;
            visibility: hidden;
            z-index: 9999;
        }

            .cs-page-loading.active {
                opacity: 1;
                visibility: visible;
            }

            .cs-page-loading.ajax_active {
                opacity: .5;
                visibility: visible;
                transition: 1s;
            }

                .cs-page-loading.ajax_active > .cs-page-loading-inner {
                    opacity: 1;
                }

        .cs-page-loading-inner {
            position: absolute;
            top: 50%;
            left: 0;
            width: 100%;
            text-align: center;
            -webkit-transform: translateY(-50%);
            transform: translateY(-50%);
            -webkit-transition: opacity .2s ease-in-out;
            transition: opacity .2s ease-in-out;
            opacity: 0;
        }

        .cs-page-loading.active > .cs-page-loading-inner {
            opacity: 1;
        }

        .cs-page-loading-inner > span {
            display: block;
            font-family: 'Inter', sans-serif;
            font-size: 1rem;
            font-weight: normal;
            color: #3f87f5;
        }

        .cs-page-spinner {
            display: inline-block;
            width: 2.75rem;
            height: 2.75rem;
            margin-bottom: .75rem;
            vertical-align: text-bottom;
            border: .15em solid #3f87f5;
            border-right-color: transparent;
            border-radius: 50%;
            -webkit-animation: spinner .75s linear infinite;
            animation: spinner .75s linear infinite;
        }

        #sticky-wrapper {
            z-index: 999;
        }

        .dropdown-menu.open.show ul.dropdown-menu.inner {
            display: block
        }

        #left-menu ul > li > a:not(.nav-link-custom):hover {
            background-color: aliceblue;
            transition: 0.5s;
        }

        label.required:after {
            content: " *";
            color: red;
        }

        .button-loading {
            opacity: 0.8;
            cursor: no-drop !important;
        }

            .button-loading > .anticon-loading {
                display: inherit !important;
            }

        .btn:focus {
            box-shadow: unset !important;
        }

        @@-webkit-keyframes spinner {
            100% {
                -webkit-transform: rotate(360deg);
                transform: rotate(360deg);
            }
        }

        @@keyframes spinner {
            100% {
                -webkit-transform: rotate(360deg);
                transform: rotate(360deg);
            }
        }

        .ps-scrollbar-y-rail {
            z-index: 1000;
            opacity: 0 !important;
        }

        label.label-toolbar {
            display: flow-root !important;
            margin-bottom: 2px;
        }

            label.label-toolbar > span:first-child {
                /*text-transform: uppercase;*/
                float: left;
            }

            label.label-toolbar > span:last-child {
                font-size: 18px;
                float: right;
            }

                label.label-toolbar > span:last-child > i {
                    cursor: pointer;
                    margin-right: 7px;
                }

        @if (!webLicense.MultiLanguage)
        {<text>
            #langTab, .lang_select, .add_lang, .lang_col button , .lang_col .lang_node:nth-child(n+2) {
                display: none !important;
