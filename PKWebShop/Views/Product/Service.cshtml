@model PKWebShop.Models.service
@using PKWebShop.Models.CustomizeModels
@using PKWebShop.Models

@{
    WebShopEntities db = new WebShopEntities();

    var slideImage = ViewBag.page_slide as SectionFeatureModel;
    var category = ViewBag.Category as category;
}

<!--Start Breadcrumb Text area-->
@if (slideImage != null)
{
    <section class="breadcrumb-area" style="background: rgba(0, 0, 0, 0) url('@slideImage.Picture') no-repeat; background-size:cover;">
        <div class="breadcrumb-text-area">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <div class="breadcrumb-text text-center">
                            <h1>Hệ thống mẫu</h1>
                            <ul class="breadcrumbs">
                                <li><a href="/trang-chu">Trang chủ</a><i class="fa fa-angle-right"></i></li>
                                <li><a href="/he-thong-mau">Hệ thống mẫu</a><i class="fa fa-angle-right"></i></li>
                                <li><a href="javascript:void(0)">@Model.Name</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}

<!--Start practice v5 area-->
<section id="practice-v5-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12">
                <div class="practice-right-sidebar">
                    <!--Start practice right single sidebar-->
                    <div class="practice-right-single-sidebar">
                        <ul class="practice-law-box" role="tablist">
                            @foreach (var item in ViewBag.listCategory as List<category>)
                            {
                                <!--Start single law box-->
                                <li class="single-law-box" data-tab-name="@item.CategoryName">
                                    <a href="/nhom-san-pham/@PKWebShop.AppLB.CommonFunc.ConvertNonUnicodeURL(item.CategoryName)-@item.ReId" aria-controls="@item.CategoryName" role="tab">@item.CategoryName<i class="fa fa-angle-right"></i></a>
                                </li>
                                <!--End single law box-->
                            }
                        </ul>
                    </div>
                    <!--End practice right single sidebar-->
                    <!--Start practice right single sidebar-->
                    <div class="practice-right-single-sidebar">
                        <div class="practice-v4-sidebar-title">
                            <h3><span>Hệ thống mẫu</span></h3>
                        </div>
                        <div class="practice-right-single-sidebar">
                            <ul class="practice-law-box" role="tablist">
                                @foreach (var item in ViewBag.listService as List<service>)
                                {
                                    <!--Start single law box-->
                                    <li class="single-law-box @if (item.ServiceId == Model.ServiceId) { @Html.Raw("active")} " data-tab-name="@item.Name">
                                        <a href="/he-thong-mau/@PKWebShop.AppLB.CommonFunc.ConvertNonUnicodeURL(item.Name)-@item.ServiceId" aria-controls="@item.Name" role="tab">@item.Name<i class="fa fa-angle-right"></i></a>
                                    </li>
                                    <!--End single law box-->
                                }
                            </ul>
                        </div>
                    </div>
                    <!--End practice right single sidebar-->
                </div>
            </div>
            <div class="col-lg-9 col-md-9 col-sm-9 col-xs-12 tab-content anim-5-all">
                <div class="practice-left-content tab-pane fade in active" id="@Model.Name">
                    <div class=" practice-left-middle-text">
                        <h2>@Model.Name</h2>

                        @if (Model.Picture != null)
                        {
                            <div class="fix practice-bottom-left-img">
                                <img src="@Model.Picture" width="210" height="258" alt="">
                            </div>
                            <div class="clearfix"></div>
                        }

                        @Html.Raw(PKWebShop.AppLB.UserContent.ScrollEffect(Model.Decription))
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!--End practice v5 area-->