@model  IEnumerable<PKWebShop.Models.sectionfeaturedetail>
@{

}
<div class="section-page big-55-height over-hide z-bigger">

    <div class="parallax parallax-top" style="background-image: url('@ViewBag.topbg'); top: 0px;"></div>
    <div class="dark-over-pages"></div>
    <div class="hero-center-section pages">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-12 parallax-fade-top" style="top: 0px; opacity: 1;">
                    <div class="hero-text">@ViewBag.Title</div>
                </div>
            </div>
        </div>
    </div>
</div>
@Html.Partial("_BookingForm")

<div class="padding-top-bottom background-grey over-hide">
    <div class="container">
        @{ var i = 0;}
        @foreach (var a in Model)
        {
            i++;
            <div class="row background-white p-0 m-0">
                <div class="col-xl-6 p-0 @(i%2==0?"order-first order-xl-last":"")">
                    <div class="img-wrap  rev-service">
                        <img src="@a.Picture" alt="">
                    </div>
                </div>
                <div class="col-xl-6 p-0 align-self-center">
                    <div class="row justify-content-center">
                        <div class="col-9 pt-4 pt-xl-0 pb-5 pb-xl-0 text-center">
                            <h4 class="">@a.Title</h4>
                            <p class="mt-3">@Html.Raw(a.Description)</p>
                        </div>
                    </div>
                </div>
            </div>
        }   
    </div>
</div>
