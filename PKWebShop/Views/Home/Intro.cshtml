<div class="cs-sidebar-enabled cs-sidebar-right">
    <div class="container">
        <div class="row">
            <!-- Content-->
            <div class="col-lg-9 cs-content py-4 mb-2 mb-sm-0 pb-sm-5">
                <div class="pb-4" style="max-width: 38rem;">
                    <nav aria-label="breadcrumb">
                        <ol class="py-1 my-2 breadcrumb">
                            <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
                            <li class="breadcrumb-item active" aria-current="page">@Model.ParentTopicName</li>
                        </ol>
                    </nav>
                </div>
                <img style="width:100%" src="@Model.Picture" />
                <h1 class="mb-5">@Model.Name</h1>
                <div class="post-content">
                    <!-- Post content-->
                    @Html.Raw(Model.Decription)
                </div>
            </div>
            <!-- Sidebar-->
            @Html.Partial("_Left_content")
        </div>
    </div>
</div>

