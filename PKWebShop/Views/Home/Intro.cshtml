@model PKWebShop.Models.n_news
@using PKWebShop.Models.CustomizeModels
@using PKWebShop.Models

@{
    ViewBag.Title = Model.TitleWebsite;
    ViewBag.SEO_Description = Model.SEODescription;
    ViewBag.og_image = Model.Picture;

    var trangkhac_topbg = ViewBag.trangkhac_topbg as SectionFeatureModel;
    var listTags = ViewBag.ListTag as List<n_news_tags>;
    var curURL = Request.Url.LocalPath;
}
<div class="page-breadcrumbs">
    <div class="container">
        <div class="row py-5">
            <div class="col-lg-8">
                <h1 class="m-0">@Model.Name</h1>
            </div>
            <div class="col-lg-4">
                <nav aria-label="breadcrumb">
                    <ol class="py-1 my-2 breadcrumb float-right">
                        <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
                        <li class="breadcrumb-item active" aria-current="page">@Model.ParentTopicName</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
