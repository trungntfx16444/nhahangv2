@using PKWebShop.Models
@using PKWebShop.Models.CustomizeModels
@using PKWebShop.AppLB
@{
    webconfiguration info = UserContent.GetWebInfomation(true);
}
<div class="section-page big-55-height over-hide z-bigger">

    <div class="parallax parallax-top" style="background-image: url('@ViewBag.topbg')"></div>
    <div class="dark-over-pages"></div>

    <div class="hero-center-section pages">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-12 parallax-fade-top">
                    <div class="hero-text">Liên hệ</div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="padding-top z-bigger">
    <div class="container">
        <div class="row justify-content-center padding-bottom-smaller">
            <div class="col-md-8">
                <h3 class="text-center padding-bottom-small">Gửi liên hệ</h3>
                <div class="subtitle with-line text-center mb-4"></div>
            </div>
            <div class="clearfix"></div>
            <div class="col-md-4 ajax-form">
                <input name="name" type="text" placeholder="Họ tên: *" autocomplete="off" />
            </div>
            <div class="col-md-4 mt-4 mt-md-0 ajax-form">
                <input name="email" type="text" placeholder="Email: *" autocomplete="off" />
            </div>
            <div class="clearfix"></div>
            <div class="col-md-8 mt-4 ajax-form">
                <textarea name="message" placeholder="Nội dung"></textarea>
            </div>
            <div class="clearfix"></div>
            <div class="col-md-8 mt-3 ajax-form text-center">
                <button class="send_message" id="send" data-lang="en"><span>submit</span></button>
            </div>
            <div class="clearfix"></div>
            <div class="col-md-8 padding-top-bottom">
                <div class="sep-line"></div>
            </div>
        </div>
    </div>
</div>
<div class="padding-top-bottom z-bigger">
    <div class="position-relative">
        <div class="map">
            @Html.Raw(info.GoogleMap)
        </div>
        <div class="container">
            <div class="row no-gutters">
                <div class="col-12 col-md-12 col-lg-3 contact-absolute">
                    <div class="section-contact">
                        <h3 class="section-title">Liên hệ với chúng tôi</h3>
                        <div class="contact">
                            <div class="contact-icon">
