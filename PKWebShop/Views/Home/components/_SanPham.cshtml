@model sFeatures_view
@using PKWebShop.Models.CustomizeModels
@using PKWebShop.AppLB
@{
    var adminSite = UserContent.GetAdminSite();
}

<section class="product">
    <div class="container">
        <div class="section-title">
            <h2 class="title">
                <img class="img-fluid" src="/Content/client/img/img-title.png"> Món ngon mỗi ngày
            </h2>
            <h3 class="subtitle">Combo <span>giá rẻ</span> được mua nhiều nhất</h3>
            <p class="decription">
                Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s
            </p>
        </div>
        <div class="row">
            @foreach (var item in Model.Details)
            {
                <div class="col-lg-4 col-md-6">
                    <div class="product_item">
                        <div class="product-img">
                            <a href="#">
                                @foreach (var listimg in Model.Details)
                                {
                                    <div class="entry-img">
                                        @foreach (var img in listimg.Files)
                                        {
                                            <img src="@($"{adminSite}{img.FileName}")" alt="" class="img-fluid">
                                        }

                                    </div>
                                }
                            </a>
                        </div>
                        <div class="product-content">
                            <div class="product-name mb-2"><a href="#">@item.Detail.Title</a></div>@*Lorem Ipsum is simply dummy text*@
                            <div class="d-flex d-lg-block justify-content-between align-items-center">
                                <div class="product-price mb-lg-3">
                                    <ins>150.000 VNĐ</ins>
                                    <del>250.000 VNĐ</del>
                                </div>
                                <div class="product-btn-action">
                                    <a href="#" class="btn btn-cart"><i class="bi bi-cart-plus"></i></a>
                                </div>
                            </div>


                        </div>
                    </div>
                </div>
            }

        </div>
        <div class="text-center mt-3">
            <a href="#" class="btn-contact">Đọc thêm</a>
        </div>
    </div>
</section>
