@using PKWebShop.Models
@using PKWebShop.Models.CustomizeModels
@using PKWebShop.AppLB
@{
    var tintuc = ViewBag.tintuc as sectionfeature;
    var Tintuc_list = ViewBag.Tintuc_list as List<n_news> ?? new List<n_news>();
}

@if (Tintuc_list != null && Tintuc_list.Count > 0)
{
    <div class="blog-area ptb-50">
        <div class="container bg-white">
            <div class="section-title-tab-wrap align-items-inherit py-3">
                <div class="section-title-3">
                    <h2>@(tintuc != null && !string.IsNullOrEmpty(tintuc?.Title ?? "") ? tintuc.Title : "Mẹo hay trong gia đình")</h2>
                </div>
            </div>
            <div class="blog-area-pb homehews">
                <div class="row">
                    <div class="col-md-7 newvideo">
                        <iframe width="560" height="315" src="https://www.youtube.com/embed/NhrThlibAkc" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen=""></iframe>
                    </div>
                    <div class="col-md-5 newlist">
                        @foreach (var t in Tintuc_list)
                        {
                            <a href="@($"/{t.UrlCode}-nd{t.ReId}")">
                                <img width="65" height="40" src="@(!string.IsNullOrEmpty(t.Picture) ? t.Picture : "/Content/Client/images/no_image.png")" onerror="this.onerror=null;this.src='/Content/Client/images/no_image.png';" loading="lazy">
                                <p>
                                    @(t.Name)
                                    <i class="far fa-eye"></i> <span>@(t.ViewCount ?? 0)</span>
                                </p>
                            </a>
                        }
                        <a href="@($"/{UserContent.GetUrlSite(SiteSEO.code_SEO.TinTuc).url}")" class="viewother">Xem các tin bài khác »</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
