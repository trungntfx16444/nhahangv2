@using PKWebShop.Models.CustomizeModels
@using PKWebShop.Models
@using PKWebShop.AppLB
@using PKWebShop.Utils
@model sFeatures_view
@{
    var adminSite = UserContent.GetAdminSite();
}

<style type="text/css">
    .shop-area .swiper-button-next, .shop-area .swiper-button-prev {
        top: 38%;
    }

    .section-sub-title {
        overflow-x: auto;
        white-space: nowrap;
    }
</style>

<div class="pt-0">
    @foreach (var item in Model.Details)
    {
        <div class="product-area pt-40">
            <div class="container">
                <div class="section-title-tab-wrap align-items-inherit justify-content-between mb-30">
                    <div class="section-title">
                        <h2 class="title">@Html.Raw(item.Detail.Title?.Replace("[", "<span>").Replace("]", "</span>"))</h2>
                    </div>
                </div>
                <div class="product-Swiper">
                    <div class="swiper galerySwiper">
                        <div class="swiper-wrapper">

                            @foreach (var f in item.Files)
                            {
                                <div class="swiper-slide">
                                    <div class="single-product-wrap" style="height: 300px">
                                        <img class="w-100 h-100" style="object-fit: cover" src="@($"{adminSite}{f.FileName}")" alt="@item.Detail.Title" onerror="this.onerror=null;this.src='/Content/Client/images/no_image.png';" loading="lazy">

                                    </div>
                                </div>
                            }

                        </div>
                        <div class="swiper-button-next"></div>
                        <div class="swiper-button-prev"></div>
                    </div>
                </div>
                @if (!string.IsNullOrEmpty(item.Detail.URL) && item.Detail.URL != "#")
                {
                    <div class="mt-3 text-center">
                        <a class="btn-view-more" href="@item.Detail.URL">
                            <span>Xem chi tiết <i class="fas fa-angle-double-right ml-1"></i></span>
                        </a>
                    </div>
                }
            </div>
        </div>

    }
</div>


<script>
    $(function () {
        $(".product-content-left .div-text").matchHeight();
        //$(".product-content-left .product-price").matchHeight();
    })
</script>