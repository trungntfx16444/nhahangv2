@using PKWebShop.Models.CustomizeModels
@model sFeatures_view
<div class="testimonial-area pb-40">
    <div class="container">
        <div class="vendor_">
            <div class="section-title-tab-wrap mb-20">
                <div class="section-title-3">
                    <h2 class="pb-5">@Model.Feature.Title</h2>
                </div>
                <p>@Model.Feature.SubTitle</p>
            </div>
            <div class="testimonial-active dot-style-2 dot-style-2-position-static">
                @foreach (var d in Model.Details)
                {
                    foreach (var files in d.Files)
                    {
                        <div class="single-testimonial-2 text-center">
                            <div class="testimonial-img">
                                <img src="@(files.FileName??string.Empty)" alt="@d.Detail.Title" onerror="this.onerror=null;this.src='/Content/Client/images/no_image.png';" loading="lazy" />
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
        
    </div>
    
</div>

