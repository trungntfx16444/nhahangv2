                                                    {
                                                        <li class="has-dropdown">
                                                            <a href="@i.menu.URL" title="@i.menu.Name">@i.menu.Name</a>
                                                            @if (i.child?.Count() > 0)
                                                            {
                                                                <span><i class="fas fa-angle-right"></i></span>
                                                                <ul class="submenu has-dropdown">
