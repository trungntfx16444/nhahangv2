                            </div>
                        </div>
                    </div>
                    <div class="col-lg-9">
                        <div class="main-menu">
                            <nav>
                                <ul>
                                    @foreach (var item in menus.OrderBy(m => m.menu.Order))
                                    {
                                        <li class="menu-list_item has-dropdown">
                                            <a class="menu@(item.menu.URL?.Replace("/", "_"))" href="@item.menu.URL">
                                                <item>
                                                    @item.menu.Name
