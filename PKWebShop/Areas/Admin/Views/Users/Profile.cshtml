@model PKWebShop.Models.user
@{
    ViewBag.Title = "Profile";
}

<div class="page-header">
    <h2 class="header-title">@ViewBag.Title</h2>
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a href="/admin/" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Tổng quan</a>
            <a href="/admin/Users" class="breadcrumb-item">Thành viên</a>
            <span class="breadcrumb-item active">@ViewBag.Title</span>
        </nav>
    </div>
</div>


<p class="btn-group">
        <a href="/admin/users/changepass/" class="btn btn-default"><i class="glyphicon glyphicon-edit"></i> Đổi mật khẩu</a>
</p>


@if (TempData["error"] != null)
{
    <div class="alert alert-danger">
        @Html.Raw(TempData["error"])
    </div>
}
else if (TempData["success"] != null)
{
    <div class="alert alert-success">
        @Html.Raw(TempData["success"])

    </div>
}




<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header well" data-original-title="">
                <h2 class="card-title"><i class="glyphicon glyphicon-book"></i> @ViewBag.Title</h2>
            </div>
            <div class="card-body">
                <form role="form" action="/admin/users/updateprofile" method="post">
                    @Html.HiddenFor(m => m.UserId)
                    <div class="form-group">
                        <label>Họ Tên</label>
                        <input type="text" required name="FullName" class="form-control" placeholder="Họ & Tên" value="@Model.Fullname">
                    </div>
                    <div class="form-group">
                        <label>Email</label>
                        <input type="email" required name="Email" class="form-control" placeholder="Email" value="@Model.Email">
                    </div>
                    <div class="form-group">
                        <label>User Name</label>
                        <input type="text" required name="UserName" class="form-control" placeholder="Username" value="@Model.UserName">
                    </div>
                 
                    <div class="form-group">
                        <label>Vai Trò</label>
                        <select disabled name="Role" class="form-control">
                            <option>Admin</option>
                            <option @if (Model.Role?.Equals("Manager") == true) { @Html.Raw(@"selected=""selected""") }>Manager</option>
                        </select>
                    </div>
                   
                    <button type="submit" class="btn btn-primary">Lưu lại</button>

                </form>
            </div>
        </div>
    </div>
</div>



<p class="btn-group">
  <a href="/admin/users/changepass/" class="btn btn-default"><i class="glyphicon glyphicon-edit"></i> Đổi mật khẩu</a>
</p>
