@model IEnumerable<PKWebShop.Models.customer>

@if (ViewBag.Error != null)
{
    <p class="label label-danger">@ViewBag.Error</p>
    <input type="hidden" name="count" value="-1" />
}
else
{
    if (Model != null && Model.Count() > 0)
    {
        <table class="table table-hover mb-0">
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <span class="font-weight-semibold text-uppercase">@(item.FullName)</span><br />
                            <span class="font-size-11 text-dark">#@(item.Id)</span>
                        </td>
                        <td>
                            <span><i class="anticon anticon-phone"></i> @(item.Phone ?? "---")</span><br />
                            <span><i class="anticon anticon-mail"></i> @(item.Email ?? "---")</span>
                            <div class="float-lg-right">
                                <a href="javascript:void(0)" class="btn btn-xs btn-primary" onclick="chooseCustomer('@item.Id')">
                                    <i class="anticon anticon-like"></i> Chọn
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    <input type="hidden" name="count" value="@Model.Count()" />
}

<script type="text/javascript">
    var count = $("input[name='count']").val();
    if (count > -1) {
        success('Tìm thấy ' + count + ' khách hàng');
    }
</script>

